        "RUTA_DATOS = \"/content/datos_clientes\"\n",
        "\n",
        "def guardar_cliente(cliente):\n",
        "    os.makedirs(RUTA_DATOS, exist_ok=True)\n",
        "    nombre_archivo = f\"{cliente.nombre.replace(' ', '_').lower()}.txt\"\n",
        "    ruta = os.path.join(RUTA_DATOS, nombre_archivo)\n",
        "    with open(ruta, \"w\", encoding=\"utf-8\") as f:\n",
        "        f.write(\"=== FICHA CLIENTE GLOWSHOP ===\\n\")\n",
        "        f.write(f\"Fecha:        {datetime.now().strftime('%d/%m/%Y %H:%M')}\\n\")\n",
        "        f.write(f\"Nombre:       {cliente.nombre}\\n\")\n",
        "        f.write(f\"Email:        {cliente.email}\\n\")\n",
        "        f.write(f\"Tipo piel:    {cliente.tipo_piel.capitalize()}\\n\")\n",
        "        f.write(f\"Puntos Glow:  {cliente.puntos_glow}\\n\")\n",
        "        f.write(f\"Tipo cliente: {type(cliente).__name__}\\n\")\n",
        "        if isinstance(cliente, ClienteVIP):\n",
        "            f.write(f\"Nivel VIP:    {cliente.nivel_vip.capitalize()}\\n\")\n",
        "            f.write(f\"Descuento:    {int(cliente.descuento * 100)}%\\n\")\n",
        "        f.write(\"\\n--- HISTORIAL DE COMPRAS ---\\n\")\n",
        "        if cliente.historial_compras:\n",
        "            total = 0\n",
        "            for i, c in enumerate(cliente.historial_compras, 1):\n",
        "                f.write(f\"  {i}. {c['producto']} â€” ${c['precio']:,.0f}\\n\")\n",
        "                total += c[\"precio\"]\n",
        "            f.write(f\"  TOTAL: ${total:,.0f}\\n\")\n",
        "        else:\n",
        "            f.write(\"  Sin compras registradas.\\n\")\n",
        "    return ruta\n",
        "\n",
        "def leer_ficha(nombre_archivo):\n",
        "    ruta = os.path.join(RUTA_DATOS, nombre_archivo)\n",
        "    if not os.path.exists(ruta):\n",
        "        return f\" Archivo no encontrado: {nombre_archivo}\"\n",
        "    with open(ruta, \"r\", encoding=\"utf-8\") as f:\n",
        "        return f.read()\n",
        "\n",
        "def listar_fichas():\n",
        "    if not os.path.exists(RUTA_DATOS):\n",
        "        return []\n",
        "    return [f for f in os.listdir(RUTA_DATOS) if f.endswith(\".txt\")]\n",
        "\n",
        "\n",
