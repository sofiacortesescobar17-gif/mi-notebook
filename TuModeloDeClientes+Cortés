        "def mostrar_catalogo(categoria=None):\n",
        "    print(\"\\n\" + \"â•\" * 58)\n",
        "    print(\"      CATÃLOGO GLOWSHOP â€“ Maquillaje & Skincare  \")\n",
        "    print(\"â•\" * 58)\n",
        "    categorias = {}\n",
        "    for cod, prod in CATALOGO_PRODUCTOS.items():\n",
        "        if categoria and prod[\"categoria\"].lower() != categoria.lower():\n",
        "            continue\n",
        "        categorias.setdefault(prod[\"categoria\"], []).append((cod, prod))\n",
        "    for cat, items in categorias.items():\n",
        "        print(f\"\\n   {cat}\\n  \" + \"â”€\" * 54)\n",
        "        for cod, prod in items:\n",
        "            print(f\"  [{cod}]  {prod['nombre']:<38} ${prod['precio']:>8,.0f}\")\n",
        "    print(\"\\n\" + \"â•\" * 58)\n",
        "\n",
        "def buscar_producto(codigo):\n",
        "    return CATALOGO_PRODUCTOS.get(codigo.upper())\n",
        "\n",
        "def resumen_clientes(lista_clientes):\n",
        "    print(\"\\n\" + \"â•\" * 58)\n",
        "    print(f\"      CLIENTES GLOWSHOP  ({Cliente.total_clientes} registrados)\")\n",
