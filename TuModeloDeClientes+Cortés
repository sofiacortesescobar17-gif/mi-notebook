        "#  CLASE CLIENTE\n",
        "# â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•\n",
        "class Cliente:\n",
        "    total_clientes = 0\n",
        "    TIPOS_PIEL_VALIDOS = [\"seca\", \"mixta\", \"grasa\", \"normal\", \"sensible\"]\n",
        "\n",
        "    def __init__(self, nombre, email, tipo_piel):\n",
        "        self.nombre            = nombre\n",
        "        self.email             = email\n",
        "        self.tipo_piel         = tipo_piel.lower() if tipo_piel.lower() in self.TIPOS_PIEL_VALIDOS else \"normal\"\n",
        "        self.historial_compras = []\n",
        "        self.puntos_glow       = 0\n",
        "        Cliente.total_clientes += 1\n",
        "\n",
        "    def __str__(self):\n",
        "        return (\n",
        "            f\" Cliente GlowShop: {self.nombre}\\n\"\n",
        "            f\"    Email:        {self.email}\\n\"\n",
        "            f\"    Tipo de piel: {self.tipo_piel.capitalize()}\\n\"\n",
        "            f\"    Puntos Glow:  {self.puntos_glow}\\n\"\n",
        "            f\"     Compras:      {len(self.historial_compras)}\"\n",
        "        )\n",
        "\n",
        "    def realizar_compra(self, producto, precio):\n",
        "        puntos_ganados = int(precio // 1000)\n",
        "        self.puntos_glow += puntos_ganados\n",
        "        self.historial_compras.append({\"producto\": producto, \"precio\": precio, \"puntos\": puntos_ganados})\n",
        "        return (\n",
        "            f\" Compra registrada: {producto} â€” ${precio:,.0f}\\n\"\n",
        "            f\"    Puntos ganados: {puntos_ganados}  |  Total acumulado: {self.puntos_glow}\"\n",
        "        )\n",
        "\n",
        "    def ver_historial(self):\n",
        "        if not self.historial_compras:\n",
        "            return f\"{self.nombre} aÃºn no ha realizado compras.\"\n",
        "        lineas = [f\"\\n Historial de {self.nombre}:\\n\" + \"â”€\" * 45]\n",
        "        total = 0\n",
        "        for i, c in enumerate(self.historial_compras, 1):\n",
        "            lineas.append(f\"  {i}. {c['producto']:<32} ${c['precio']:>9,.0f}\")\n",
        "            total += c[\"precio\"]\n",
        "        lineas.append(\"â”€\" * 45)\n",
        "        lineas.append(f\"  {'TOTAL':<32} ${total:>9,.0f}\")\n",
        "        lineas.append(f\"  {'Puntos Glow acumulados':<32} {self.puntos_glow:>9}\")\n",
        "        return \"\\n\".join(lineas)\n",
        "\n",
        "    def recomendar_rutina(self):\n",
        "        rutinas = {\n",
        "            \"seca\":     [\"Limpiador cremoso con Ã¡cido hialurÃ³nico\", \"TÃ³nico hidratante sin alcohol\",\n",
